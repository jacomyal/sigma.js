{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es5",
    "sourceMap": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types/", "./external-types/"],
    "lib": ["dom", "dom.iterable"]
  },
  "include": ["./external-types/**/*", "./src/**/*"],
  "ts-node": {
    "files": true
  }
}
